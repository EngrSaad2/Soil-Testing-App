<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#E3F4FD"
    tools:context=".TestResultActivity">


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <TableRow
            android:layout_weight="1"
            android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/PH"
            android:id="@+id/txt_ph"
            android:textSize="20sp"
            android:textIsSelectable="false"
            android:textColor="#00796B"
            />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:editable="false"
            android:layout_span="2"
            android:id="@+id/phvalue"/>
        </TableRow>
        <TableRow
            android:layout_weight="1"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/N"
                android:id="@+id/txt_n"
                android:textSize="20sp"
                android:textIsSelectable="false"
                android:textColor="#00796B"
                />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:editable="false"
                android:id="@+id/nvalue"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/KgPerHec"
                android:textSize="20sp"
                android:textIsSelectable="false"
                android:textColor="#00796B"
                android:id="@+id/unit1"
                />
        </TableRow>

        <TableRow
            android:layout_weight="1"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/P"
                android:id="@+id/txt_p"
                android:textSize="20sp"
                android:textIsSelectable="false"
                android:textColor="#00796B"
                />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:editable="false"
                android:id="@+id/pvalue"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/KgPerHec"
                android:textSize="20sp"
                android:textIsSelectable="false"
                android:textColor="#00796B"
                android:id="@+id/unit2"
                />
        </TableRow>

        <TableRow
            android:layout_weight="1"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/K"
                android:id="@+id/txt_k"
                android:textSize="20sp"
                android:textIsSelectable="false"
                android:textColor="#00796B"
                />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:editable="false"
                android:id="@+id/kvalue"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/KgPerHec"
                android:textSize="20sp"
                android:textIsSelectable="false"
                android:textColor="#00796B"
                android:id="@+id/unit3"
                />
        </TableRow>
        <TableRow
            android:layout_weight="1"
            android:gravity="center">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Select_Crop"
                android:layout_span="3"
                android:id="@+id/btn_selectCrop"
                android:onClick="select_crop"
                android:background="#00b7d3"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:paddingTop="15sp"
                android:paddingBottom="15sp"
                android:paddingLeft="30sp"
                android:paddingRight="30sp"
                />
        </TableRow>
    </TableLayout>
</RelativeLayout>
